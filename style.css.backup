/* FPS Crosshair Cursor */
/* Modern Circular Cursor */
.cursor-crosshair {
    position: fixed;
    top: 0;
    left: 0;
    width: 12px;
    height: 12px;
    background: var(--primary-neon);
    border-radius: 50%;
    pointer-events: none;
    z-index: 10000;
    transform: translate(-50%, -50%);
    transition: width 0.3s ease, height 0.3s ease, background 0.3s ease;
    mix-blend-mode: screen;
}

/* Outer ring */
.cursor-crosshair::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    border: 1px solid rgba(124, 58, 237, 0.3);
    border-radius: 50%;
    transition: width 0.3s ease, height 0.3s ease, border-color 0.3s ease;
}

/* Hover state - Expand cursor */
.cursor-crosshair.active {
    width: 20px;
    height: 20px;
    background: var(--accent-primary);
    mix-blend-mode: difference;
}

.cursor-crosshair.active::before {
    width: 60px;
    height: 60px;
    border-color: var(--accent-primary);
    background: rgba(124, 58, 237, 0.1);
}

/* Scroll Progress Bar */
.scroll-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-neon), var(--secondary-neon));
    z-index: 9998;
    transition: width 0.1s ease;
    box-shadow: 0 0 10px var(--primary-neon);
}

/* Typography - All Headers Use Space Grotesk */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', 'Inter', sans-serif;
    font-weight: 700;
    color: #f1f5f9;
    letter-spacing: -0.02em;
    text-shadow: none;
}

h1 {
    letter-spacing: -0.03em;
    color: #ffffff;
}

/* Modal Active State - Show system cursor */
body.modal-active {
    cursor: auto !important;
}

body.modal-active .cursor-crosshair {
    opacity: 0;
    pointer-events: none;
}

body.modal-active *, 
body.modal-active a, 
body.modal-active button {
    cursor: auto !important;
}

/* Navigation - Glassmorphism */
nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 5%;
    background: rgba(5, 5, 5, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--text-white) 0%, var(--accent-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.4s ease;
    position: relative;
    background-size: 200% auto;
}

.logo:hover {
    background-position: right center;
    filter: brightness(1.2);
}

/* Glitch text effect removed - simplified */
.glitch-text {
    color: var(--text-white);
    transition: all 0.3s ease;
    text-decoration: none;
}

.glitch-text:hover {
    color: var(--accent-primary);
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 2.5rem;
}

/* ==================== STABLE NAVBAR (NO JITTER) ==================== */
/* 1. The Container */
.nav-links a {
    position: relative; /* Anchors the line */
    display: inline-block; /* Stabilizes the box */
    text-decoration: none !important;
    color: #ffffff;
    font-weight: 500; /* Lock font weight (don't change on hover!) */
    padding: 5px 0;
    border: none !important; /* No borders allowed */
    transition: color 0.3s ease; /* Only animate color, NOT size */
}

/* 2. The Floating Purple Line (Ghost Element) */
.nav-links a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px; /* Puts line slightly below text */
    width: 0; /* Start invisible */
    height: 2px;
    background-color: #7c3aed; /* Neon Purple */
    transition: width 0.3s ease; /* Smooth slide */
    box-shadow: 0 0 8px #7c3aed;
}

/* 3. Hover State */
.nav-links a:hover {
    color: #7c3aed; /* Just change color */
    transform: none !important; /* Stop text from moving/scaling */
}

.nav-links a:hover::after {
    width: 100%; /* Grow line from 0% to 100% */
}

/* 4. Active Page State */
.nav-links a.current {
    color: #7c3aed;
}

.nav-links a.current::after {
    width: 100%;
}

/* Hamburger Menu */
.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    z-index: 1001;
    gap: 5px;
}

.hamburger .bar {
    width: 25px;
    height: 3px;
    background: var(--text-white);
    transition: all 0.3s ease;
    border-radius: 3px;
}

.hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
    background: var(--accent-primary);
}

.hamburger.active .bar:nth-child(2) {
    opacity: 0;
}

.hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
    background: var(--accent-primary);
}

/* ==================== FEATURED PROJECT HERO ==================== */
.hero-featured {
    min-height: 80vh;
    padding: 8rem 5% 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
}

.featured-content {
    max-width: 1400px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.featured-left {
    z-index: 3;
}

.featured-label {
    display: inline-block;
    color: #00ff00;
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 3px;
    margin-bottom: 1rem;
    padding: 0.5rem 1rem;
    border: 2px solid #00ff00;
    border-radius: 5px;
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
    animation: pulse-green 2s ease-in-out infinite;
}

@keyframes pulse-green {
    0%, 100% {
        box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
    }
    50% {
        box-shadow: 0 0 40px rgba(0, 255, 0, 0.8), 0 0 60px rgba(0, 255, 0, 0.4);
    }
}

.featured-left h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    background: linear-gradient(135deg, #7c3aed 0%, #7c3aed 50%, #14b8a6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
    line-height: 1.1;
}

.featured-desc {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    margin-bottom: 2rem;
    max-width: 500px;
}

.featured-right {
    perspective: 1000px;
}

.featured-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    transform: rotate(5deg);
    transition: transform 0.5s ease;
    box-shadow: 0 20px 60px rgba(124, 58, 237, 0.4);
}

.featured-card:hover {
    transform: rotate(0deg) scale(1.05) translateY(-10px);
    box-shadow: 0 30px 80px rgba(124, 58, 237, 0.6);
}

.featured-card img {
    width: 100%;
    height: auto;
    display: block;
    border: 3px solid rgba(124, 58, 237, 0.5);
    border-radius: 20px;
}

.card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(124, 58, 237, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
}

.featured-card:hover .card-glow {
    opacity: 1;
}

@media (max-width: 1024px) {
    .featured-content {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .featured-card {
        max-width: 500px;
        margin: 0 auto;
    }
}

/* Hero Section - Cyberpunk Minimalist */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center; /* Center everything horizontally */
    padding: 0 5% 2rem 5%;
    position: relative;
    overflow: hidden;
    background: transparent; /* Allow body background to show */
}

@media (min-width: 1024px) {
    .hero {
        padding: 0 10%;
    }
}

/* Container to hold Text + Plane */
.hero-content-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 1400px;
        z-index: 2;
        text-align: center;
        min-height: 100vh;
}

/* 1. Text Section (Left) */
.hero-content {
        flex: 1;
        text-align: center;
        max-width: 800px;
        display: flex;
        flex-direction: column;
        align-items: center;
}

/* 2. Plane Section (Right) */
.hero-background {
        display: none;
}

.hero-background img {
        width: 100%;
        max-width: 600px; /* Stop it from getting too huge */
        height: auto;
        animation: float-plane 4s ease-in-out infinite;
}

@keyframes float-plane {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
}

/* MOBILE FIX (Stack them back up) */
@media (max-width: 900px) {
    .hero-content-wrapper {
        flex-direction: column-reverse; /* Put Plane ON TOP of text */
        text-align: center;
        gap: 2rem;
    }
    .hero-content {
        text-align: center;
        margin-top: 2rem;
    }
    .hero-background img {
        max-width: 80%; /* Smaller plane on mobile */
    }
}

@keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

.hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    max-width: 1200px;
}

/* Massive Hero Headline */
.hero-headline {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 900;
    font-family: 'Inter', sans-serif;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--text-white);
    text-transform: uppercase;
    margin: 0;
    text-shadow: none;
}

/* Glassmorphism Subtext Card */
.hero-subtext-card {
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1.5rem 3rem;
    min-height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.typewriter-text {
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    color: var(--text-white);
    margin: 0;
}

/* Dual CTA Buttons */
.hero-cta {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
}

.btn-glow {
    box-shadow: 0 0 30px rgba(124, 58, 237, 0.6), 0 0 60px rgba(124, 58, 237, 0.4);
}

.btn-glow:hover {
    box-shadow: 0 0 40px rgba(124, 58, 237, 0.8), 0 0 80px rgba(124, 58, 237, 0.6);
}

.btn-secondary {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: transparent;
    color: var(--text-white);
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.3s ease;
    font-family: 'Inter', sans-serif;
}

.btn-secondary:hover {
    border-color: var(--text-white);
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-3px);
}

/* Tech Stack Marquee - Hero Version */
.hero-tech {
    position: relative;
    margin-top: 4rem;
    left: 0;
    width: 100%;
}

.tech-item {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem 2rem;
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    margin-right: 1.5rem;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-white);
    white-space: nowrap;
}

.tech-item span:first-child {
    color: var(--accent-primary);
    font-size: 0.6rem;
}


/* Scroll Hint - Cyberpunk Mouse */
.scroll-hint {
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    z-index: 10;
}

.scroll-hint span:first-child {
    font-size: 0.75rem;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 3px;
    font-weight: 600;
    text-shadow: none;
    opacity: 0.9;
}

.scroll-arrow {
    width: 28px;
    height: 45px;
    border: 2px solid var(--accent-primary);
    border-radius: 15px;
    position: relative;
    box-shadow: 0 0 15px var(--accent-glow),
                inset 0 0 10px rgba(124, 58, 237, 0.2);
    animation: scrollPulse 2s ease-in-out infinite;
}

.scroll-arrow::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
    box-shadow: 0 0 10px var(--accent-primary);
}

@keyframes scrollWheel {
    0%, 100% {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
    50% {
        opacity: 0;
        transform: translateX(-50%) translateY(15px);
    }
}

@keyframes scrollPulse {
    0%, 100% {
        box-shadow: 0 0 15px var(--accent-glow),
                    inset 0 0 10px rgba(124, 58, 237, 0.2);
        border-color: var(--accent-primary);
    }
    50% {
        box-shadow: 0 0 25px var(--accent-glow),
                    inset 0 0 15px rgba(124, 58, 237, 0.4);
        border-color: #7c3aed;
    }
}

/* ==================== GRADIENT TEXT EFFECT ==================== */
