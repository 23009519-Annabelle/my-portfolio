/* Responsive adjustments for new modals */
@media (max-width: 768px) {
    .design-sub-grid {
        grid-template-columns: 1fr;
    }

    .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
    }
}

/* Project Detail Pages */
.project-detail {
    padding: 0;
    min-height: 100vh;
    background: transparent;
}

.project-detail.dark-theme {
    background: linear-gradient(135deg, var(--bg-dark) 0%, #1a0a1a 100%);
}

/* Video Hero Header */
.project-video-hero {
    position: relative;
    width: 100%;
    height: 80vh;
    min-height: 600px;
    overflow: hidden;
}

.hero-video-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    filter: brightness(0.5);
}

.video-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.8) 100%);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2rem 5%;
    z-index: 1;
}

.video-hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
    align-self: center;
    justify-self: flex-end;
    margin-top: auto;
    margin-bottom: 4rem;
}

.video-hero-content h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    color: var(--text-white);
    margin: 0;
    text-shadow: none;
    font-family: 'Inter', sans-serif;
}

.video-hero-content .project-genre {
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    color: rgba(255, 255, 255, 0.9);
    font-style: italic;
    font-weight: 400;
}

.project-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 6rem 5% 4rem 5%;
}

.back-link {
    display: inline-block;
    color: var(--text-white);
    text-decoration: none;
    font-size: 1.1rem;
    margin-bottom: 2rem;
    transition: var(--transition);
    padding: 0.5rem 0;
}

.back-link:hover {
    color: var(--accent-primary);
    transform: translateX(-5px);
}

.light-theme .back-link:hover {
    color: #06b6d4;
}

/* STAR Case Study Sections */
.star-section {
    margin-bottom: 4rem;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    backdrop-filter: blur(10px);
}

.star-section h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--text-white);
    margin-bottom: 1.5rem;
}

.star-label {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--primary-neon);
    background: rgba(124, 58, 237, 0.1);
    padding: 0.4rem 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
}

.star-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 1.5rem;
}

.star-section ul {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
}

.star-section li {
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    padding-left: 2rem;
    margin-bottom: 1rem;
    position: relative;
}

.star-section li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--secondary-neon);
    font-weight: bold;
}

/* Meta Grid */
.meta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
}

.meta-item h3 {
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--secondary-neon);
    margin-bottom: 0.75rem;
}

.meta-item p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
}

/* Engineering Challenges */
.engineering-challenges {
    margin: 5rem 0;
}

.engineering-challenges h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--text-white);
    margin-bottom: 3rem;
    text-align: center;
}

.challenge-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.challenge-card {
    padding: 2.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.challenge-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--primary-neon);
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(124, 58, 237, 0.2);
}

.challenge-icon {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    display: block;
}

.challenge-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-white);
    margin-bottom: 1rem;
}

.challenge-card p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
}

/* Scrollable Gallery */
.scrollable-gallery {
    margin: 4rem 0;
}

.scrollable-gallery h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--text-white);
    margin-bottom: 2rem;
}

.gallery-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 1.5rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
}

.gallery-scroll::-webkit-scrollbar {
    height: 8px;
}

.gallery-scroll::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
}

.gallery-scroll::-webkit-scrollbar-thumb {
    background: var(--primary-neon);
    border-radius: 4px;
}

.gallery-scroll::-webkit-scrollbar-thumb:hover {
    background: var(--secondary-neon);
}

.gallery-item {
    flex: 0 0 auto;
    width: min(500px, 80vw);
    scroll-snap-align: start;
}

.gallery-item img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
}

.gallery-item img:hover {
    transform: scale(1.02);
    border-color: var(--primary-neon);
}

.project-header {
    margin-bottom: 3rem;
}

.project-header h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--text-white);
    margin: 1rem 0;
    text-shadow: none;
}

.project-tag.cyan {
    background: #06b6d4;
    box-shadow: 0 0 15px rgba(6, 182, 212, 0.5);
}

.project-genre {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    font-style: italic;
    font-weight: 300;
}

.project-hero-image {
    width: 100%;
    max-height: 600px;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 4rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.project-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Project Video Showcase */
.project-video-showcase {
    margin: 4rem 0;
    padding: 3rem;
    background: rgba(10, 10, 10, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(124, 58, 237, 0.3);
}

.project-video-showcase h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 2rem;
    background: linear-gradient(135deg, #7c3aed, #7c3aed, #14b8a6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.video-container {
    position: relative;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 0 50px rgba(124, 58, 237, 0.4);
    border: 2px solid var(--accent-primary);
}

.video-container video {
    width: 100%;
    height: auto;
    display: block;
    background: #000;
    cursor: auto;
    position: relative;
    z-index: 9999;
}

.video-container:hover {
    box-shadow: 0 0 60px rgba(124, 58, 237, 0.6);
}

.video-container video::-webkit-media-controls-panel {
    background: linear-gradient(to bottom, rgba(10, 10, 10, 0.9), rgba(10, 10, 10, 0.95));
}

/* Project Gallery Grid */
.project-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
}

.project-gallery img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    border: 1px solid rgba(124, 58, 237, 0.2);
    transition: var(--transition);
}

.project-gallery img:hover {
    transform: translateY(-5px);
    border-color: var(--accent-primary);
    box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
}

.project-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
}

.project-description h2,
.features-section h2,
.tech-section h2 {
    font-size: 2rem;
    color: var(--text-white);
    margin-bottom: 1rem;
    font-weight: 700;
}

.project-description p {
    font-size: 1.2rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
}

.project-description p strong {
    color: var(--accent-primary);
    font-weight: 700;
}

/* Role, Tech Stack, and Challenges sections */
.project-role,
.project-tech-stack,
.project-challenges {
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(12px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.project-role h3,
.project-tech-stack h3,
.project-challenges h3 {
    font-size: 1.5rem;
    color: var(--accent-primary);
    margin-bottom: 1rem;
    font-weight: 700;
    font-family: 'Inter', sans-serif;
}

.project-role p {
    font-size: 1.2rem;
    color: var(--text-white);
    font-weight: 600;
}

.project-tech-stack ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.project-tech-stack ul li {
    background: rgba(124, 58, 237, 0.15);
    color: var(--text-white);
    padding: 0.7rem 1.5rem;
    border-radius: 50px;
    font-size: 0.95rem;
    font-weight: 600;
    border: 1px solid rgba(124, 58, 237, 0.3);
    font-family: 'Inter', sans-serif;
}

.project-challenges p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
}

.project-challenges p:last-child {
    margin-bottom: 0;
}

.project-challenges p strong {
    color: var(--accent-secondary);
    font-weight: 700;
    display: block;
    margin-bottom: 0.5rem;
}

.project-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.info-card {
    background: rgba(124, 58, 237, 0.1);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(124, 58, 237, 0.3);
    transition: var(--transition);
}

.light-theme .info-card {
    background: rgba(6, 182, 212, 0.1);
    border-color: rgba(6, 182, 212, 0.3);
}

.info-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3), 0 0 15px #00ff00;
    border-color: #00ff00;
    animation: borderFlicker 0.2s infinite;
}

.light-theme .info-card:hover {
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3), 0 0 15px #00ff00;
    border-color: #00ff00;
}

.info-card h3 {
    font-size: 1rem;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
}

.light-theme .info-card h3 {
    color: #06b6d4;
}

.info-card p {
    font-size: 1.3rem;
    color: var(--text-white);
    font-weight: 600;
}

/* Game Design Document Download Section */
.gdd-download {
    margin-top: 3rem;
    text-align: center;
    padding: 2rem;
    background: rgba(124, 58, 237, 0.05);
    border: 2px solid rgba(124, 58, 237, 0.2);
    border-radius: 15px;
}

.gdd-download {
    text-align: center;
    margin: 5rem 0 3rem 0;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
}

.gdd-download .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.2rem 2.5rem;
    font-size: 1.1rem;
}

.gdd-download .btn-primary svg {
    flex-shrink: 0;
}

.features-list {
    list-style: none;
    padding-left: 0;
}

.features-list li {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    padding: 1rem 0;
    padding-left: 2rem;
    position: relative;
}

.features-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-size: 2rem;
}

.light-theme .features-list li::before {
    color: #06b6d4;
}

/* Design Showcase Grid */
.design-showcase-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
}

.showcase-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    background: rgba(6, 182, 212, 0.05);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 20px;
    overflow: hidden;
    transition: var(--transition);
    align-items: center;
}

.showcase-item:hover {
    border-color: #06b6d4;
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(6, 182, 212, 0.3);
}

.showcase-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
}

.showcase-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.showcase-item:hover .showcase-image img {
    transform: scale(1.05);
}

.showcase-info {
    padding: 2rem;
}

.showcase-info h3 {
    font-size: 1.8rem;
    color: #06b6d4;
    margin-bottom: 1rem;
}

.showcase-info p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
}

/* Responsive for project detail pages */
@media (max-width: 768px) {
    .project-info-grid {
        grid-template-columns: 1fr;
    }

    .showcase-item {
        grid-template-columns: 1fr;
    }

    .showcase-image {
        height: 250px;
    }

    .project-hero-image {
        max-height: 400px;
    }
}

/* Sub Projects Grid (for Web Apps) */
.sub-projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
}

.sub-project-card {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 2rem;
    background: rgba(124, 58, 237, 0.05);
    border: 1px solid rgba(124, 58, 237, 0.2);
    border-radius: 20px;
    overflow: hidden;
    transition: var(--transition);
    align-items: center;
}

.sub-project-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(124, 58, 237, 0.4);
}

.sub-project-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
}

.sub-project-image img,
.sub-project-image video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.sub-project-card:hover .sub-project-image img,
.sub-project-card:hover .sub-project-image video {
    transform: scale(1.05);
}

.sub-project-info {
    padding: 2rem;
}

.sub-project-info h3 {
    font-size: 1.8rem;
    color: var(--accent-primary);
    margin-bottom: 1rem;
    font-weight: 700;
}

.sub-project-info p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: 1.5rem;
}

.sub-project-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
}

.sub-project-features span {
    padding: 0.5rem 1rem;
    background: rgba(124, 58, 237, 0.2);
    border: 1px solid rgba(124, 58, 237, 0.4);
    border-radius: 20px;
    font-size: 0.9rem;
    color: var(--accent-primary);
    font-weight: 500;
}


/* ==================== VIDEO MODAL ==================== */
.video-modal {
    display: none;
    position: fixed;
    z-index: 10000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.3s ease-out;
}

.video-modal-content {
    position: relative;
    width: 90%;
    max-width: 1200px;
    max-height: 90vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.video-modal-content video {
    width: 100%;
    height: auto;
    max-height: 90vh;
    border-radius: 10px;
    box-shadow: 0 0 50px rgba(124, 58, 237, 0.5);
}

.video-modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    color: var(--text-white);
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10001;
}

.video-modal-close:hover {
    color: var(--accent-primary);
    transform: scale(1.2) rotate(90deg);
}

@media (max-width: 768px) {
    .video-modal-content {
        width: 95%;
    }
    
    .video-modal-close {
        top: -35px;
        font-size: 35px;
    }
}

/* ==================== LIGHTBOX ==================== */
#lightbox {
    display: none;
    position: fixed;
    z-index: 10001;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    justify-content: center;
    align-items: center;
    cursor: pointer;
    animation: fadeIn 0.3s ease;
}

#lightbox.active {
    display: flex;
}

#lightbox img {
    max-width: 90%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 10px;
    box-shadow: 0 0 50px rgba(124, 58, 237, 0.5);
    cursor: default;
}

/* ==================== CLICK RIPPLE ==================== */
.click-ripple {
    position: fixed;
    border: 2px solid rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    pointer-events: none;
    z-index: 9999;
    animation: ripple-animation 0.6s ease-out;
}

@keyframes ripple-animation {
    0% {
        width: 0;
        height: 0;
        opacity: 1;
    }
    100% {
        width: 100px;
        height: 100px;
        opacity: 0;
    }
}

/* ==================== NEON PULSE EFFECT ==================== */
.neon-pulse {
    animation: neon-glow 3s ease-in-out infinite;
}

@keyframes neon-glow {
    0%, 100% {
        text-shadow: 
            0 0 10px rgba(124, 58, 237, 0.5),
            0 0 20px rgba(124, 58, 237, 0.3),
            0 0 30px rgba(124, 58, 237, 0.2);
    }
    50% {
        text-shadow: 
            0 0 20px rgba(124, 58, 237, 0.8),
            0 0 40px rgba(124, 58, 237, 0.6),
            0 0 60px rgba(124, 58, 237, 0.4),
            0 0 80px rgba(0, 255, 255, 0.2);
    }
}

/* ==================== TECH STACK MARQUEE ==================== */
.tech-marquee {
    width: 100%;
    background: rgba(255, 255, 255, 0.03);
    border-top: 1px solid var(--accent-primary);
    border-bottom: 1px solid var(--accent-primary);
    overflow: hidden;
    padding: 1rem 0;
    position: relative;
    z-index: 10;
    white-space: nowrap;
}

.marquee-track {
    display: flex;
    gap: 4rem;
    animation: scroll-marquee 20s linear infinite;
    width: fit-content;
}

.marquee-track span {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.3);
    white-space: nowrap;
    letter-spacing: 2px;
    transition: color 0.3s ease;
}

.tech-marquee:hover .marquee-track {
    animation-play-state: paused;
}

.tech-marquee:hover .marquee-track span {
    color: var(--accent-primary);
    text-shadow: 0 0 10px rgba(124, 58, 237, 0.5);
}

@keyframes scroll-marquee {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-50%);
    }
}

/* ==================== ACHIEVEMENT POPUP ==================== */
.achievement-popup {
    position: fixed;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-white);
    padding: 1rem 2rem;
    display: flex;
    gap: 1rem;
    align-items: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    z-index: 10001;
    animation: slideDown 4s ease forwards;
    border-radius: 12px;
    font-size: 1rem;
}

.achievement-popup span {
    font-size: 2rem;
}

.achievement-popup strong {
    font-size: 1.1rem;
    letter-spacing: 1px;
    color: var(--accent-primary);
}

@keyframes slideDown {
    0% {
        top: -100px;
    }
    10% {
        top: 20px;
    }
    90% {
        top: 20px;
    }
    100% {
        top: -100px;
    }
}

/* ==================== HORROR LIGHT SWITCH ==================== */
.lightbulb-btn {
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 60px;
    height: 60px;
    background: rgba(124, 58, 237, 0.2);
    border: 2px solid var(--accent-primary);
    border-radius: 50%;
    font-size: 2rem;
    cursor: pointer;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 0 20px rgba(124, 58, 237, 0.5);
}

.lightbulb-btn:hover {
    background: rgba(124, 58, 237, 0.4);
    box-shadow: 0 0 30px rgba(124, 58, 237, 0.8);
    transform: scale(1.1);
}

.lightbulb-btn.off {
    background: rgba(0, 0, 0, 0.8);
    border-color: #666;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

/* Lights Out Mode */
body.lights-out {
    background-color: #000 !important;
}

body.lights-out::before {
    opacity: 0 !important;
}

.flashlight-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle 150px at var(--mouse-x) var(--mouse-y), transparent 0%, rgba(0, 0, 0, 0.95) 100%);
    pointer-events: none;
    z-index: 9998;
    transition: opacity 0.3s ease;
}

body:not(.lights-out) .flashlight-overlay {
    opacity: 0;
    pointer-events: none;
}

/* ==================== PARTICLE BURST ==================== */
.particle {
    position: fixed;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    pointer-events: none;
    z-index: 10000;
    animation: particle-burst 1s ease-out forwards;
}

@keyframes particle-burst {
    0% {
        opacity: 1;
        transform: translate(0, 0) scale(1);
    }
    100% {
        opacity: 0;
        transform: translate(var(--tx), var(--ty)) scale(0);
    }
}

/* ==================== PERSPECTIVE FLOOR GRID ==================== */
.perspective-grid {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30vh;
    background: linear-gradient(transparent 0%, rgba(124, 58, 237, 0.3) 100%);
    mask-image: 
        repeating-linear-gradient(90deg, black 0px, black 1px, transparent 1px, transparent 40px),
        repeating-linear-gradient(0deg, black 0px, black 1px, transparent 1px, transparent 40px);
    mask-composite: intersect;
    -webkit-mask-composite: source-in;
    transform: perspective(500px) rotateX(60deg) translateY(100px);
    transform-origin: bottom center;
    opacity: 0.15;
    pointer-events: none;
    z-index: 0;
    animation: grid-move 20s linear infinite;
}

@keyframes grid-move {
    0% {
        mask-position: 0 0, 0 0;
    }
    100% {
        mask-position: 0 0, 0 100px;
    }
}

/* ==================== SCROLL ANIMATIONS ==================== */
.reveal-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    will-change: transform, opacity;
}

.reveal-active {
    opacity: 1;
    transform: translateY(0);
}

