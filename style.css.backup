}

/* CAD Section Coming Soon */
.cad-section {
    margin-top: 6rem;
}

.coming-soon-card {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 2px dashed rgba(255, 255, 255, 0.15);
    border-radius: 16px;
}

.coming-soon-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
}

.coming-soon-card h3 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-white);
    margin-bottom: 1rem;
}

.coming-soon-card p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto;
}

.gallery-item:hover img {
    transform: scale(1.05);
    filter: brightness(1.1);
}

/* Design Sub-Grid for Fundamentals */
.design-sub-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 2rem;
}

.design-item {
    background: rgba(6, 182, 212, 0.05);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 15px;
    overflow: hidden;
    transition: var(--transition);
}

.design-item:hover {
    border-color: #06b6d4;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
}

.design-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.design-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
}

.design-item:hover .design-image img {
