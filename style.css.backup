/* ==================== BENTO GRID RESPONSIVE FIX ==================== */
@media (max-width: 1024px) {
    .project-grid.bento-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    /* Force 'Basement of Death' card to span 2 columns */
    .bento-featured {
        grid-column: 1 / -1 !important;
        grid-row: span 2;
    }
    /* Force 'Mobile App' card to span 1 column and 2 rows */
    .bento-tall {
        grid-column: span 1 !important;
        grid-row: span 2 !important;
    }
}

@media (max-width: 768px) {
    .project-grid.bento-grid {
        grid-template-columns: 1fr;
    }
    /* Reset all cards to 1x1 and fixed height */
    .bento-featured,
    .bento-tall,
    .bento-standard {
        grid-column: span 1 !important;
        grid-row: span 1 !important;
        height: 320px !important;
        min-height: 320px !important;
        max-height: 320px !important;
    }
}
/* Skeleton Loading Animation */
.skeleton {
    position: relative;
    background: #2d3748;
    overflow: hidden;
}

.skeleton::after {
    content: '';
    position: absolute;
    top: 0;
    left: -150%;
    width: 250%;
    height: 100%;
    background: linear-gradient(90deg, rgba(45,55,72,0) 0%, rgba(203,213,225,0.3) 50%, rgba(45,55,72,0) 100%);
    animation: shimmer 1.2s infinite;
}

@keyframes shimmer {
    100% {
        left: 100%;
    }
}
/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800;900&family=Space+Grotesk:wght@400;500;600;700&display=swap');

/* Reset & Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --bg-dark: #0f1115;
    --card-bg: #1a1a1a;
    --text-main: #e2e8f0;
    --text-white: #f1f5f9;
    --primary-neon: #6366f1;
    --secondary-neon: #06b6d4;
    --accent-primary: #6366f1;
    --accent-secondary: #06b6d4;
    --accent-glow: rgba(99, 102, 241, 0.3);
    --transition: all 0.3s ease;
    --mouse-x: 50vw;
    --mouse-y: 50vh;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: #0a0a0a; /* Base dark background */
    background-image: radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.15) 0%, transparent 50%);
    background-attachment: fixed;
    color: #cbd5e1;
    font-size: 16px;
    line-height: 1.6;
    overflow-x: hidden;
    cursor: auto;
    position: relative;
    min-height: 100vh;
}

/* Noise Texture Overlay - Disabled */
body::after {
    display: none;
}

/* Starfield Effect - Disabled */
body::before {
    display: none;
}

@keyframes space-drift {
    0% {
        transform: translateY(0);
    }
    100% {
        transform: translateY(-2000px);
    }
}

/* Subtle Noise Texture Overlay */
body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
    z-index: 999;
}

