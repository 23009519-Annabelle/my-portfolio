    content: '|';
    color: var(--accent-primary);
    animation: blink 0.7s infinite;
}

.subheadline.typing-complete::after {
    animation: none;
    opacity: 0;
}

@keyframes blink {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
}

