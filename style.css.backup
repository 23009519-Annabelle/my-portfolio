/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 2000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    justify-content: center;
    align-items: center;
    overflow-y: auto;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    position: relative;
    margin: 2rem;
    padding: 3rem;
    max-width: 1200px;
    width: 90%;
    border-radius: 20px;
    border: 2px solid rgba(124, 58, 237, 0.5);
    animation: slideUp 0.3s ease;
}

@keyframes slideUp {
    from { transform: translateY(50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.modal-content.dark-theme {
    background: linear-gradient(135deg, #0a0a0a 0%, #1a0a1a 100%);
    box-shadow: 0 20px 60px rgba(124, 58, 237, 0.6);
}

.modal-content.light-theme {
    background: linear-gradient(135deg, #1a1a1a 0%, #0a1a1a 100%);
    border-color: rgba(6, 182, 212, 0.5);
    box-shadow: 0 20px 60px rgba(6, 182, 212, 0.4);
}

.close-btn {
    position: absolute;
    top: 1.5rem;
    right: 2rem;
    font-size: 3rem;
    font-weight: 300;
    color: var(--text-white);
    cursor: pointer;
    transition: var(--transition);
    line-height: 1;
    z-index: 10;
}

.close-btn:hover {
    color: var(--accent-primary);
    transform: rotate(90deg);
}

.modal-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
}

.modal-image {
    width: 100%;
    height: 400px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

.modal-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.modal-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.modal-tag {
    display: inline-block;
    padding: 0.5rem 1.2rem;
    background: var(--accent-primary);
    color: var(--text-white);
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    width: fit-content;
    box-shadow: 0 0 15px var(--accent-glow);
}

.light-theme .modal-tag {
    background: #06b6d4;
    box-shadow: 0 0 15px rgba(6, 182, 212, 0.5);
}

.modal-info h2 {
    font-size: clamp(2rem, 3vw, 2.8rem);
    font-weight: 900;
    color: var(--text-white);
    margin: 0;
    text-shadow: none;
}

.modal-genre {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 300;
    font-style: italic;
}

.modal-description p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
}

.modal-details h4,
.modal-features h4,
.modal-tech h4 {
    font-size: 1.2rem;
    color: var(--text-white);
    margin-bottom: 1rem;
    font-weight: 600;
}

.detail-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.detail-item {
    background: rgba(124, 58, 237, 0.1);
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid rgba(124, 58, 237, 0.3);
}

.light-theme .detail-item {
    background: rgba(6, 182, 212, 0.1);
    border-color: rgba(6, 182, 212, 0.3);
}

.detail-item h4 {
    font-size: 0.85rem;
    color: var(--accent-primary);
    margin-bottom: 0.3rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.light-theme .detail-item h4 {
    color: #06b6d4;
}

.detail-item p {
    font-size: 1rem;
    color: var(--text-white);
    margin: 0;
}

.modal-features ul {
    list-style: none;
    padding-left: 0;
}

.modal-features li {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.9);
    padding: 0.7rem 0;
    padding-left: 1.5rem;
    position: relative;
}

.modal-features li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-size: 1.5rem;
}

.light-theme .modal-features li::before {
    color: #06b6d4;
}

.tech-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.tech-tags span {
    padding: 0.5rem 1rem;
    background: rgba(6, 182, 212, 0.2);
    color: #06b6d4;
    border: 1px solid rgba(6, 182, 212, 0.4);
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
}

/* Bento Grid Layout */
.project-grid.bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto;
    grid-auto-rows: 250px;
}

/* Bento Grid Card Spans */
.bento-featured {
    grid-column: span 2;
    grid-row: span 2;
}

.bento-tall {
    grid-column: span 1;
    grid-row: span 2;
}

.bento-standard {
    grid-column: span 1;
    grid-row: span 1;
}

/* Project Cards with Glassmorphism */
.project-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    padding: 0;
    border-radius: 16px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.08);
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
}

.project-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.3);
}

/* Project Images */
.project-image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    z-index: 0;
}

.project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.5s ease;
    filter: brightness(0.7) contrast(1.1);
}

.project-image video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.5s ease;
    filter: brightness(0.7) contrast(1.1);
}

.project-card:hover .project-image img,
.project-card:hover .project-image video {
    transform: scale(1.05);
    filter: brightness(0.9) contrast(1.2);
}

/* Content Overlay */
.project-content-overlay {
    position: relative;
    z-index: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    justify-content: flex-end;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.6) 50%, transparent 100%);
}

.project-tag {
    display: inline-block;
    width: fit-content;
    padding: 0.5rem 1.2rem;
    background: rgba(124, 58, 237, 0.2);
    color: var(--accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 700;
    font-family: 'Inter', sans-serif;
    letter-spacing: 1px;
    text-transform: uppercase;
    border: 1px solid rgba(124, 58, 237, 0.4);
}

.project-content-overlay h3 {
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    font-weight: 800;
    font-family: 'Inter', sans-serif;
    color: var(--text-white);
    margin: 0;
    line-height: 1.2;
}

.project-content-overlay p {
    color: rgba(255, 255, 255, 0.8);
    font-size: clamp(0.85rem, 1.2vw, 0.95rem);
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
    margin: 0;
}

/* Featured cards get larger text */
.bento-featured .project-content-overlay h3 {
    font-size: clamp(1.8rem, 3vw, 2.5rem);
}

.bento-featured .project-content-overlay p {
    font-size: clamp(1rem, 1.5vw, 1.2rem);
}

/* Learn More Arrow (Fixed Top-Right Circle) */
.learn-more-arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    background: var(--primary-neon);
    color: white;
    border-radius: 50%;
    z-index: 2;
}

.learn-more-arrow span {
    display: none;
}

.learn-more-arrow svg {
    transition: transform 0.3s ease;
}

.project-card:hover .learn-more-arrow svg {
    transform: translateX(4px);
}

/* 3D Cube Icon for 3D Modeling Card */
.cube-icon {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(20, 184, 166, 0.1) 100%);
    position: relative;
    perspective: 1000px;
}

.cube-icon::before {
    content: '';
    position: absolute;
    width: 150px;
    height: 150px;
    transform-style: preserve-3d;
    animation: rotateCube 8s infinite linear;
}

@keyframes rotateCube {
    0% { transform: rotateX(0deg) rotateY(0deg); }
    100% { transform: rotateX(360deg) rotateY(360deg); }
}

.cube-face {
    position: absolute;
    width: 150px;
    height: 150px;
    background: rgba(124, 58, 237, 0.2);
    border: 2px solid var(--primary-neon);
    backdrop-filter: blur(10px);
}

.cube-front  { transform: translateZ(75px); }
.cube-back   { transform: rotateY(180deg) translateZ(75px); }
.cube-right  { transform: rotateY(90deg) translateZ(75px); }
.cube-left   { transform: rotateY(-90deg) translateZ(75px); }
.cube-top    { transform: rotateX(90deg) translateZ(75px); }
.cube-bottom { transform: rotateX(-90deg) translateZ(75px); }


.bento-3d .project-image {
    background: linear-gradient(135deg, rgba(10, 10, 10, 0.95) 0%, rgba(20, 20, 20, 0.95) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.bento-plane-image img.plane-float {
    width: 80%;
    max-width: 220px;
    display: block;
    margin: 0 auto;
    animation: plane-float 3s ease-in-out infinite alternate;
    filter: drop-shadow(0 18px 18px rgba(20,20,20,0.18)) drop-shadow(0 2px 8px rgba(124,58,237,0.10));
}

@keyframes plane-float {
    0% { transform: translateY(0); }
    100% { transform: translateY(-15px); }
}

/* Footer */
footer {
    background-color: var(--dark-bg);
    padding: 2rem 5%;
    text-align: center;
    border-top: 2px solid transparent;
    border-image: linear-gradient(90deg, transparent, var(--accent-primary), transparent) 1;
    position: relative;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.footer-social {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
}

.social-link {
    color: var(--accent-primary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
}

.social-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, var(--accent-primary), #14b8a6);
    transition: width 0.3s ease;
}

.social-link:hover::after {
    width: 100%;
}

.social-link:hover {
    color: #14b8a6;
    text-shadow: none;
}

.separator {
    color: rgba(124, 58, 237, 0.3);
    font-size: 0.9rem;
}

footer p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    margin: 0;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
    .project-grid.bento-grid {
        grid-template-columns: repeat(2, 1fr);
        grid-auto-rows: 250px;
    }
    /* Featured Project spans full width */
    .bento-featured {
        grid-column: 1 / -1;
        grid-row: span 2;
    }
    /* Tall card sits next to two standard cards */
    .bento-tall {
        grid-column: span 1;
        grid-row: span 2;
    }
    .bento-standard {
        grid-column: span 1;
        grid-row: span 1;
    }

    .modal-grid {
        grid-template-columns: 1fr;
    }

    .modal-image {
        height: 300px;
    }
}

@media (max-width: 768px) {
    /* Show hamburger menu */
    .hamburger {
        display: flex;
    }

    /* Hide nav links by default */
    .nav-links {
        position: fixed;
        top: 80px;
        right: -100%;
        width: 250px;
        height: calc(100vh - 80px);
        background: rgba(10, 10, 10, 0.95);
        backdrop-filter: blur(20px);
        flex-direction: column;
        align-items: flex-start;
        padding: 2rem;
        gap: 2rem;
        border-left: 1px solid rgba(124, 58, 237, 0.3);
        box-shadow: -5px 0 20px rgba(0, 0, 0, 0.5);
        transition: right 0.4s ease;
    }

    /* Show nav links when active */
    .nav-links.active {
        right: 0;
    }

    .nav-links li {
        width: 100%;
    }

    .nav-links a {
        display: block;
        width: 100%;
        padding: 0.5rem 0;
        font-size: 1.1rem;
    }

    nav {
        padding: 1.5rem 5%;
    }

    /* Hero Section Responsive */
    .hero-headline {
        font-size: clamp(2.5rem, 8vw, 4rem);
    }

    .hero-subtext-card {
        padding: 1rem 1.5rem;
    }

    .hero-cta {
        flex-direction: column;
        width: 100%;
        max-width: 300px;
    }

    .hero-cta a {
        width: 100%;
        text-align: center;
    }

    .hero-tech {
        bottom: 2rem;
    }

    .tech-item {
        padding: 0.6rem 1.2rem;
        font-size: 0.85rem;
    }

    .hero {
        padding-top: 8rem;
    }

    .project-grid.bento-grid {
        grid-template-columns: 1fr;
        grid-auto-rows: 300px;
    }
    /* All cards reset to 1x1 and fixed height */
    .bento-featured,
    .bento-tall,
    .bento-standard {
        grid-column: span 1 !important;
        grid-row: span 1 !important;
        height: 300px !important;
        min-height: 300px !important;
        max-height: 300px !important;
    }

    .project-content-overlay {
        padding: 1.5rem;
    }

    .modal-content {
        padding: 2rem;
        margin: 1rem;
    }

    .modal-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .detail-grid {
        grid-template-columns: 1fr;
    }

    .close-btn {
        font-size: 2.5rem;
        top: 1rem;
        right: 1rem;
    }
}

@media (max-width: 480px) {
    .nav-links {
        flex-direction: column;
        gap: 0.8rem;
        text-align: center;
    }

    .btn-primary {
        padding: 0.9rem 2rem;
        font-size: 1rem;
    }

    .project-card h3 {
        font-size: 1.3rem;
    }
}

/* Gallery Grid for Illustrations */
.modal-single {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.gallery-item {
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(124, 58, 237, 0.3);
    transition: var(--transition);
    cursor: pointer;
}

.gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(124, 58, 237, 0.6);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: var(--transition);
}

/* 3D Modeling Page Styles */
.tools-used-section {
    margin: 3rem 0;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
}

.tools-used-section h3 {
    font-size: 1.3rem;
    color: var(--primary-neon);
    margin-bottom: 1rem;
    font-weight: 700;
}

.tool-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.tool-badge {
    display: inline-block;
    padding: 0.6rem 1.5rem;
    background: rgba(124, 58, 237, 0.1);
    border: 1px solid var(--primary-neon);
    border-radius: 8px;
    color: var(--text-white);
    font-size: 0.95rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.tool-badge:hover {
    background: rgba(124, 58, 237, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
}

.curriculum-context {
    margin: 3rem 0;
    padding: 2.5rem;
    background: rgba(255, 255, 255, 0.03);
    border-left: 4px solid var(--secondary-neon);
    border-radius: 12px;
}

.curriculum-context h3 {
    font-size: 1.3rem;
    color: var(--secondary-neon);
    margin-bottom: 1rem;
    font-weight: 700;
}

.curriculum-context p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
}

.modeling-section {
    margin: 5rem 0;
}

.section-header {
    margin-bottom: 3rem;
}

.section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--text-white);
    margin-bottom: 0.75rem;
}

.section-subtitle {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    font-style: italic;
}

/* Masonry Grid for Blender Animations - FIXED */
.masonry-grid {
    column-count: 3;
    column-gap: 20px;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
}

.masonry-item {
    break-inside: avoid;
    margin-bottom: 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.masonry-item img {
    width: 100% !important;
    height: auto !important;
    display: block;
    object-fit: cover;
}

/* RESPONSIVE COLUMNS */
@media (max-width: 1024px) {
    .masonry-grid { column-count: 2; }
}

@media (max-width: 600px) {
    .masonry-grid { column-count: 1; }
}

/* Remove the broken duplicate .masonry-grid code below this */

.masonry-caption {
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.3);
}

.masonry-caption h4 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-white);
    margin-bottom: 0.5rem;
}

.masonry-caption p {
    font-size: 0.95rem;
    line-height: 1.6;
